{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}ContactList - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerMarketingBundle::appnav-campaignmail.html.twig", {'app_contactlist':true}) }}
{% endblock %}

{% block body %}
    <style>
        .import-step{
            min-height: 450px;
        }
        .thumb {
            width: 24px;
            height: 24px;
            float: none;
            position: relative;
            top: 7px;
        }

        form .progress {
            line-height: 15px;
        }

        .progress {
            display: inline-block;
            width: 100px;
            border: 3px groove #CCC;
        }

        .progress div {
            font-size: smaller;
            background: orange;
            width: 0;
        }
    </style>
    <section class="content-header">
        <h1>
            {{"import"|trans|title}}
        </h1>
    </section>
    <section class="content" multi-app="flowerImporter">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <div class="box-body">
                <div ng-view>
                    Loading....
                </div>
            </div>
            <div class="box-footer">

            </div>
        </div>

    </section>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/flowercore/js/angular/mgonto-angular-wizard/dist/angular-wizard.css') }}" rel="stylesheet" type="text/css" />
{% endblock%}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        var importsUrl = "{{ path("contactlist_imports", {'id': contactlist.id}) }}";
        var rootPath = "{{ path("dashboard") }}";
        var contactListId = "{{ contactlist.id }}";
    </script>

    <script src="{{ asset('bundles/flowercore/js/underscore.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/flowercore/js/angular/mgonto-angular-wizard/dist/angular-wizard.js') }}" type="text/javascript"></script>

    <script src="{{ asset('bundles/flowercore/js/angular/ng-file-upload.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/flowercore/js/angular/importer/app-importer.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/flowercore/js/angular/importer/controller/importerCtrl.js') }}" type="text/javascript"></script>



{% endblock %}
