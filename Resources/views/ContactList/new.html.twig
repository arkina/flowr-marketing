{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'ContactList'}) }} - {{ parent() }}{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>{{ 'contactlists' | trans|capitalize }}</h1>
        <ol class="breadcrumb">
            <li><a href={{ path('dashboard') }}><i class="fa fa-dashboard"></i> {{"Dashboard" | trans({})}}</a></li>
            <li><a href="{{ path('contactlist') }}"> {{ '%entity% List'|trans({'%entity%': 'ContactList'}) }}</a></li>
            <li class="active" >{{ 'New %entity%'|trans({'%entity%': 'ContactList'}) }}</li>
        </ol>
    </section>        
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ 'new contactlist'|trans|capitalize }}</h3>
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('contactlist_create')}) }}
                {{ form_widget(form) }}
                <p>
                    <button class="btn btn-primary" type="submit">{{ 'save'|trans|capitalize }}</button>
                </p>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">
                <div class="btn-group record_actions">
                </div>
            </div>
        </div>
    </section>
{% endblock %}
