{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'ContactList'}) }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block body %}

    <section class="content">
        {{ include("FlowerMarketingBundle::appnav-campaignmail.html.twig", {'app_contactlist':true}) }}
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">{{ 'new contactlist'|trans|capitalize }}</h3>
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('contactlist_create')}) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <div class="col-sm-10 col-sm-offset-2">
                        <button class="btn btn-primary" type="submit">{{ 'save'|trans|capitalize }}</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">
                <div class="btn-group record_actions">
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
