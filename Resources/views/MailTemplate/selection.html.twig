{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'MailTemplate'}, 'MailTemplate') }} - {{ parent() }}{% endblock %}

{% block app_menu %}
    {{ include("FlowerMarketingBundle::appnav-campaignmail.html.twig", {'app_mailtemplate':true}) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ 'mailtemplate selection'|trans({}, 'MailTemplate') }}
        </h1>
    </section>
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title"></h3>
        </div>
        <div class="box-body">
            <div class="row">
                {% for template in templates %}
                <div class="col-sm-4 col-md-3">
                    <a href="{{ path("mailtemplate_new", {"template_id":template.id}) }}" class="thumbnail">
                      <img src="..." alt="...">
                      <div class="caption">
                        <h3>{{template.name}}</h3>
                        <p>{{template.description}}</p>
                      </div>
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="box-footer">
            <div class="btn-group record_actions">

            </div>
        </div>
    </div>
</section>
{% endblock %}
