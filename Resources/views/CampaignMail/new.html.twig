{% extends "FlowerCoreBundle::layout.html.twig" %}

{% block title %}{{ '%entity% creation'|trans({'%entity%': 'CampaignMail'}, 'CampaignMail') }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block app_menu %}
    {{ include("FlowerMarketingBundle::appnav-campaignmail.html.twig", {'app_campaignmail':true}) }}
{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            {{ '%entity% creation'|trans({'%entity%': 'CampaignMail'}, 'CampaignMail') }}
        </h1>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
            </div>
            <div class="box-body">
                {{ form_start(form, {action: path('campaignmail_create')}) }}
                {{ form_widget(form) }}
                <p>
                    <button class="btn btn-primary" type="submit">{{ 'Create'|trans({}, 'CampaignMail') }}</button>
                </p>
                {{ form_end(form) }}
            </div>
            <div class="box-footer">

                <div class="btn-group record_actions">

                </div>

            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
